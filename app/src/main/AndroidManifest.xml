<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.prayogo.footballLeagueApp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StandingsActivity"></activity>
        <activity android:name=".team.DetailTeamActivity" />
        <activity android:name=".team.TeamActivity" />

        <activity
            android:name=".match.FavoriteMatchActivity"
            android:label="@string/title_activity_favorite_match" />
        <activity android:name=".match.DetailMatchActivity" />
        <activity android:name=".DetailLeagueActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>